<div class="container mt-5 p-3">
  <div class="card text-center">
    <div class="card-header">
      <%= @item.name %>
    </div>
    <div class="card-body">
      <p class="card-text"><%= @item.description %></p>
      <%= link_to '아이템 목록', items_path, class:"btn btn-primary"%>
      <% if user_signed_in? %>
        <%= link_to '아이템 수정', edit_item_path(@item), class:"btn btn-info"%>
        <%= link_to '아이템 삭제', item_path(@item), method: :delete, data: { confirm: "Are you sure?" }, class:"btn btn-danger"%>
      <% end %>
    </div>
    <div class="card-footer text-muted">
      <%= time_ago_in_words(@item.created_at) %>
    </div>
  </div>

<!--TODO:  아이템 판매목록 partial  -->
  
  <% @item.registered_items.each do |item| %>
  <div class="col-md-6 mx-auto">
  <span class="badge bg-primary mb-3">구매중인 물품</span>
  <div class="card mb-1">
    <div class="row">
      <div class="item-image col-3 mx-auto">
        <img src="" alt="">
        <span class="badge bg-primary">
          <% if item.buy_sell? %>
            구매
          <% else %>
            판매
          <% end %>
        </span>
      </div>
      <div class="card-body col-9 mx-auto">
        <p><%= link_to item.item.name, item_path(item.item_id), class: 'card-title font-weight-bold' %></p>
        <p class="card-text">개수: <%= item.quantity %></p>
        <p class="card-text item-buy-price font-weight-bold">가격: <%= item.price %></p>
      </div>
    </div>
    <div class="card-footer d-flex bd-highlight align-items-center">
      <span class="card-text mx-1 badge rounded-pill bg-info">서버: <%= item.server.server_name %></span>
      <span class="card-text mx-1">아이디: <%= item.user.in_game_id %></span>
      <div class="ml-auto">
        <a href="#" class="btn btn-primary mx-1"><%= fa_icon 'comments'%></a>
        <a href="#" class="btn btn-primary mx-1"><%= fa_icon 'copy'%> 구매 </a>
      </div>
    </div>      
  </div>
<% end %>
</div>
</div>
<% if user_signed_in? %>
  <div class="container">
    <%= form_with(model: @item, class: 'shadow p-3 mb-3 bg-info rounded', local: true) do |f| %>
      <div class="form-group row">
        <%= f.label :name, "아이템 이름", class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= f.text_field :name, class: 'form-control shadow rounded', placeholder: "아이템 이름" %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :description, "내용", class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= f.text_area :description, class: 'form-control shadow rounded', placeholder: "내용" %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :image_tag, "이미지", class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= f.text_field :image_tag, class: 'form-control shadow rounded', placeholder: "이미지 주소" %>
        </div>
      </div>
      <div class="form-group row justify-content-center">
        <%= f.submit "저장", class: "btn btn-outline-light btn-lg"%>
      </div>
    <% end %>
  </div>
<% else %>
  only authorized user can access
<% end %>
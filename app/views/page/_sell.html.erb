<div class="col-md-4 mx-auto">
  <% @sell_items.each do |item| %>
  <div class="card text-center m-auto">
    <div class="card-header bg-danger">
      판매
    </div>
    <div class="card-body">
      <h5 class="card-title">s<%= item.item.name %></h5>
      <p class="card-text">가격: <%= item.price %></p>
      <p class="card-text">갯수: <%= item.quantity %></p>
      <p class="card-text">아이디: <%= item.user.in_game_id %></p>
      <% if !item.server %>
        <p>서버입력안함</p>
      <% else %>
        <p class="card-text">서버: <%= item.server.server_name %></p>
      <% end %>
      <a href="#" class="btn btn-primary">이 유저에게 바로 귓말하기</a>
    </div>
    <div class="card-footer text-muted">
      <%= time_ago_in_words(item.created_at) %> 전에 등록됨
    </div>
  </div>
<% end %>

</div>